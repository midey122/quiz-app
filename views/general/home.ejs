      <div class="container">
        <div class="question">
          <h2>Question 1</h2>
          <p>What is the capital of France?</p>
        </div>
        <ul class="options">
          <li><input type="radio" name="q1" value="a" /> Paris</li>
          <li><input type="radio" name="q1" value="b" /> London</li>
          <li><input type="radio" name="q1" value="c" /> Berlin</li>
          <li><input type="radio" name="q1" value="d" /> Madrid</li>
        </ul>
        <div class="down">
          <button type="submit">Submit</button>
          <button>Next</button>
        </div>
      </div>
    </section>
